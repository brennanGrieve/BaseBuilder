<local:QueryBlockBase x:Class="DBBlocker.SortByBlock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:DBBlocker"
             Height="95" Width="150">
    <Grid Margin="0,0,-25,0">
        <local:SubBlock Fill="{StaticResource LemonBlockFill}" Stroke="Black"/>
        <TextBlock HorizontalAlignment="Left" FontWeight="Bold" Margin="51,-1,0,0" TextWrapping="Wrap" Text="SORT BY" FontSize="16" VerticalAlignment="Top" Foreground="Black"/>
        <TextBox Name = "inputBox" IsEnabled="False" HorizontalAlignment="Left" Height="28" Margin="27,18,0,0" TextWrapping="Wrap" FontSize ="16" VerticalAlignment="Top" Width="136" Foreground="Black"/>
        <ComboBox Name ="inputCBox" SelectedValuePath="Content" SelectedIndex="0" IsEnabled="False" HorizontalAlignment="Left" Margin="27,45,0,0" VerticalAlignment="Top" Width="120" FontSize="16" Height="28" Foreground="Black">
            <ComboBoxItem Content="Ascending"/>
            <ComboBoxItem Content="Descending"/>
        </ComboBox>
    </Grid>
</local:QueryBlockBase>
