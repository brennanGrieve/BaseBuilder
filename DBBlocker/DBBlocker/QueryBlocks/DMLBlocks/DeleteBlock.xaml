             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DBBlocker"
             Height="75" Width="175">
    <Grid>
        <local:InitialBlock Fill="#FFB21D1D" Stroke="Black"/>
        <TextBlock HorizontalAlignment="Center" FontWeight="Bold" Margin="-25,0,0,0" TextWrapping="Wrap"  FontSize ="16" Text="DELETE" VerticalAlignment="Top"/>
        <TextBox FontSize="20" HorizontalAlignment="Left" Height="32" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="155" Margin="5,21,0,0"/>
    </Grid>
</UserControl>
