        <local:SubBlock Fill="#FFD6D636" Stroke="Black"/>
        <TextBlock HorizontalAlignment="Left" Margin="51,-1,0,0" TextWrapping="Wrap" Text="SORT BY" FontSize="16" VerticalAlignment="Top"/>
        <TextBox Name = "inputBox" IsEnabled="False" HorizontalAlignment="Left" Height="28" Margin="27,18,0,0" TextWrapping="Wrap" FontSize ="16" VerticalAlignment="Top" Width="136"/>
        <ComboBox  Name ="inputCBox" IsEnabled="False" HorizontalAlignment="Left" Margin="27,45,0,0" VerticalAlignment="Top" Width="120" FontSize="16" Height="28">
