<local:QueryBlockBase x:Class="DBBlocker.AlterColumnBlock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DBBlocker"
             Height="95" Width="150"
             AllowDrop="False">
    <Grid Margin="0,0,-25,0">
        <local:SubBlock Fill="{StaticResource DeepBlueBlockFill}" Stroke="Black"/>
        <TextBlock Foreground="Black" HorizontalAlignment="Center" FontWeight="Bold" Margin="-5,0,0,0" TextWrapping="Wrap" FontSize="16" Text="ALTER COLUMN" VerticalAlignment="Top"/>
        <TextBox IsEnabled="False" HorizontalAlignment="Left" Height="22" Margin="28,20,0,0" TextWrapping="Wrap" FontSize="14" VerticalAlignment="Top" Width="120" Text="Only supported"/>
        <TextBox IsEnabled="False" HorizontalAlignment="Left" Height="22" Margin="28,45,0,0" TextWrapping="Wrap" FontSize="14" VerticalAlignment="Top" Width="120" Text="In tutorial mode."/>

    </Grid>
</local:QueryBlockBase>
