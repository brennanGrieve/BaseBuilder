<local:QueryBlockBase x:Class="DBBlocker.ColumnBlock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DBBlocker"
             Height="95" Width="150"
             AllowDrop="False">
    <Grid Margin="0,0,-25,0">
        <local:SubBlock Fill="{StaticResource DeepBlueBlockFill}" Stroke="Black"/>
        <TextBox IsEnabled="False" HorizontalAlignment="Left" Height="22" Margin="28,10,0,0" TextWrapping="Wrap" FontSize="14" VerticalAlignment="Top" Width="120" Text="COLUMN_NAME"/>
        <TextBox IsEnabled="False" HorizontalAlignment="Left" Height ="22" Margin="28,30,0,25" TextWrapping="Wrap" FontSize="14" Width="120" Text="DATA_TYPE"/>
    </Grid>
</local:QueryBlockBase>
