<Window x:Class="DBBlocker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DBBlocker"
        mc:Ignorable="d"
        Title="DBBlocker" Height="465" Width="850"
        MinHeight="465"
        MinWidth="850"
        WindowState="Maximized">

    <Grid Background="DarkSlateGray">
        <StackPanel HorizontalAlignment="Stretch"  VerticalAlignment="Bottom" Height="115" Margin="215,0,5,5" Background="DarkSlateBlue"/>
        <TabControl HorizontalAlignment="Stretch"  Margin="215,5,5,125" VerticalAlignment="Stretch" >
            <TabItem Header="Query Constructor">
                <Grid Background="ForestGreen">
                    <Button Content="Button" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Center" Width="75"/>
                </Grid>
            </TabItem>
            <TabItem Header="Database Viewer">
                <Grid Background="Goldenrod"/>
            </TabItem>
        </TabControl>
        <ScrollViewer HorizontalAlignment="Left" VerticalAlignment="Stretch" Width="205" Margin="5,5,0,5" Background="OrangeRed">
            <StackPanel Height="Auto" Width="Auto"/>
        </ScrollViewer>
    </Grid>
</Window>
