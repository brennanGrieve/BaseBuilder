<Window x:Class="DBBlocker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DBBlocker"
        mc:Ignorable="d"
        Title="DBBlocker" Height="465" Width="850"
        MinHeight="465"
        MinWidth="850"
        WindowState="Maximized">

    <Grid Name="MainGrid" Background="DarkSlateGray">
        <StackPanel HorizontalAlignment="Stretch"  VerticalAlignment="Bottom" Height="115" Margin="230,0,5,5" Background="DarkSlateBlue"/>
        <TabControl HorizontalAlignment="Stretch"  Margin="230,5,5,125" VerticalAlignment="Stretch" >
            <TabItem Header="Query Constructor">
                <Grid Background="ForestGreen" 
                      DragOver="Designer_DragOver"
                      Drop="Designer_Drop"
                      AllowDrop="True"/>
            </TabItem>
            <TabItem Header="Database Viewer">
                <Grid Background="Goldenrod"/>
            </TabItem>
        </TabControl>
        <ScrollViewer HorizontalAlignment="Left" VerticalAlignment="Stretch" Width="220" Margin="5,30,0,5" Background="OrangeRed">
            <StackPanel>
                <local:SelectBlockWildCard Height="75" Width="175"/>
                <local:SelectBlockTextBox Height="75" Width="175"/>
                <local:SelectBlockAggregate Height="75" Width="175"/>
                <local:FromBlock Height="75" Width="175"/>
                <local:WhereBlock Height="75" Width="175"/>
                <local:InnerJoinBlock Height="75" Width="175"/>
                <local:OnBlock Height="75" Width="175"/>
                <local:SortByBlock Height="75" Width="175"/>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
