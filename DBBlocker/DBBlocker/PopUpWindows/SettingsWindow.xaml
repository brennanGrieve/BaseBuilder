<Window x:Class="DBBlocker.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DBBlocker"
        xmlns:properties="clr-namespace:DBBlocker.Properties"
        mc:Ignorable="d"
        Title="User Settings" Height="500" Width="550"
        Background="{StaticResource DarkGreyBrush}"
        ResizeMode="NoResize">
    <Grid>
        <ScrollViewer Margin="0,0,0,0">
            <Grid>
                <StackPanel Name="SettingsPanel">
                    <TextBlock Text="General Settings" Margin="10,10,0,10" Foreground="{StaticResource MutedWhiteBrush}" FontSize="24"/>
                    <Separator/>
                    <Label Margin="4,0,0,0">
                        <StackPanel Orientation="Horizontal" FlowDirection="LeftToRight">
                            <Label Content="Suppress Clear-All Warnings" FontSize="14"/>
                            <CheckBox Name="ClearAllBox" Margin="0,0,0,0" IsChecked="{Binding SuppressDeleteWarning, Mode=TwoWay, Source={x:Static properties:Settings.Default}, UpdateSourceTrigger=Explicit}" Height="15"/>
                        </StackPanel>
                    </Label>
                </StackPanel>
            </Grid>
        </ScrollViewer>
        <StackPanel Orientation="Horizontal" FlowDirection="LeftToRight" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,20,10" Grid.Row="1" Height="20" Width="145">
            <Button Content="Cancel" Height="20" Width="70" Click="CancelBtn_Click" Margin="0,0,5,0"/>
            <Button Content="Save" Height="20" Width="70" Click="SaveBtn_Click"/>
        </StackPanel>
    </Grid>
</Window> 
