<Window x:Class="DBBlocker.ErrorPopUp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DBBlocker"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Title="Invalid Operation" Height="115" Width="400"
        Background="{StaticResource DarkGreyBrush}"
        WindowStyle="None"
        BorderBrush="{StaticResource BorderBrush}"
        BorderThickness="2">
    <Grid>
        <Button Content="OK" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="75" IsDefault="True" Click="OK_Button_Click"/>
        <TextBlock Foreground="{StaticResource MutedWhiteBrush}" HorizontalAlignment="Right" Padding="0" TextWrapping="Wrap" Text="{DynamicResource ErrorOutput}" VerticalAlignment="Top" Width="260" Margin="0,10,50,0" Height="50"/>
        <Image Name="WarningImage" HorizontalAlignment="Left" Height="32" VerticalAlignment="Top" Width="32" Margin="20,15,0,0"/>
    </Grid>
</Window>
