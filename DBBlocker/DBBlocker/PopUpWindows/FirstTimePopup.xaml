<Window x:Class="DBBlocker.FirstTimePopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DBBlocker"
        mc:Ignorable="d"
        Background="{StaticResource DarkGreyBrush}"
        Title="FirstTimePopup" Height="300" Width="600"
        ResizeMode="NoResize"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Image Source="/Shapes/logo.png" Height="250" Width="250" HorizontalAlignment="Left" Margin="10,0,0,0"/>
        <TextBlock TextAlignment="Justify" Width="300" Height="100" FontSize="18" Text="Welcome to DBBlocker! If this is your first time working with SQL, Tutorial Mode can be found in the Help Menu." Foreground="{StaticResource MutedWhiteBrush}" TextWrapping="Wrap" HorizontalAlignment="Right" Margin="0,0,20,0"/>
        <Button Content="Ok" Width="70" Height="20" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,10,10" IsDefault="True" Click="OkButton_Click"/>
    </Grid>
</Window>
