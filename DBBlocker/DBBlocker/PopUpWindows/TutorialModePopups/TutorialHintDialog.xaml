<Window x:Class="DBBlocker.TutorialHintDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DBBlocker"
        mc:Ignorable="d"
        Title="Tutorial Hint" Height="200" Width="500"
        Background="{StaticResource DarkGreyBrush}"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        BorderBrush="{StaticResource BorderBrush}"
        BorderThickness="2">
    <Grid>
        <Image Source="/Shapes/hintIcon.png" Margin="0,10,300,20"/>
        <TextBlock x:Name="Hint" TextWrapping="Wrap" FontSize="12" Width="285" Margin="0,10,10,35" HorizontalAlignment="Right" Foreground="{StaticResource MutedWhiteBrush}"/>
        <Button Content="Ok" Width="70" Height="20" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,10,10" IsDefault="True" Click="OkBtn_Click"/>
    </Grid>
</Window>
