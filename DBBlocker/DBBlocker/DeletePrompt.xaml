<Window x:Class="DBBlocker.DeletePrompt"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DBBlocker"
        mc:Ignorable="d"
        Title="Clear All" Height="150" Width="400"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Button Content="Yes" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="75" Click="Yes_Button_Click"/>
        <Button Content="No" HorizontalAlignment="Right" Margin="0,0,95,10" VerticalAlignment="Bottom" Width="75" Click="No_Button_Click"/>
        <CheckBox Name="ShowAgainBox" Content="Don't Ask Again" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10,0,0,13"/>
        <Label HorizontalAlignment="Right" Padding="0" Content="Are you sure you want to clear the Designer? &#10;You can remove Query Blocks one at a time by &#10;dragging them into the Bin or Toolbox." VerticalAlignment="Top" Width="260" Margin="0,10,50,0" Height="52"/>
        <Image Name="WarningImage" HorizontalAlignment="Left" Height="32" VerticalAlignment="Top" Width="32" Margin="20,15,0,0"/>
    </Grid>
</Window>
